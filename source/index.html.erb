---
pageable: true
per_page: 10
---

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article %>
    <small class='muted'> ~ <%= article.date.strftime('%B %e, %Y') %></small></h2>
  <%= article.summary(250) %>
  &gt;&gt; <a href='<%= url_for article, :relative => false, :fragment => "disqus_thread" %>'
    data-disqus-identifier='<%= (url_for article, :relative => false).gsub(/.html/, "") %>'>Comment</a>
  <hr/>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>

